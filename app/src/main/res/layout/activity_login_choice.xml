<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistrationChoiceActivity"
    android:gravity="center"
    android:background="#3A819B"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img"
        android:layout_above="@+id/card"
        android:transitionName="imageTransition"
        android:src="@drawable/ic_pharmacy"
        android:layout_width="120dp"
        android:layout_centerInParent="true"
        android:layout_height="100dp"
        android:layout_margin="10dp"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        app:cardBackgroundColor="@color/cardview_light_background"
        app:cardCornerRadius="10dp"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:padding="12dp"
                android:layout_marginRight="110dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25dp"
                android:textStyle="bold"
                android:textColor="#0D293E"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:text="Login As :"
                />
            <View
                android:layout_marginTop="2dp"
                android:background="#0D293E"
                android:layout_width="match_parent"
                android:layout_height="2dp"/>
            <Button
                android:id="@+id/patient_log"
                android:textColor="#ffff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:textSize="18dp"
                android:background="@drawable/gradbtn"
                android:text="Patient"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="27dp"
                android:fontFamily="cursive"
                android:text="OR"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="#0D293E"
                android:textSize="25dp"

                android:textStyle="bold" />
            <Button
                android:textSize="18dp"
                android:background="@drawable/gradbtn"
                android:textStyle="bold"
                android:id="@+id/doctor_log"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:textColor="#ffff"
                android:text="Doctor"/>

            <TextView
                android:padding="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="25dp"
                android:textStyle="bold"
                android:textColor="#0D293E"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:text=" New User :"
                />
            <View
                android:layout_marginTop="2dp"
                android:background="#0D293E"
                android:layout_width="match_parent"
                android:layout_height="2dp"/>

            <Button
                android:layout_marginTop="8dp"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="#fff"
                android:background="@drawable/gradbtn"
                android:id="@+id/sign_up"
                android:textAllCaps="false"
                android:text="Sign up "
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />



        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>