    <LinearLayout
        android:gravity="center"
        android:layout_marginTop="100dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

      <androidx.cardview.widget.CardView
          app:cardUseCompatPadding="true"
          android:layout_gravity="center"
          app:cardElevation="12dp"
          android:id="@+id/card"
          app:cardBackgroundColor="#23515757"
          app:cardCornerRadius="10dp"
          android:layout_margin="5dp"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">

          <LinearLayout
              android:layout_margin="20dp"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:fontFamily="@font/aclonica"
                  android:textColor="#0A0111"
                  android:padding="12dp"
                  android:text="Login As :"
                  android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                  android:textSize="25dp"
                  android:textStyle="bold" />
              <View
                  android:layout_marginTop="2dp"
                  android:background="#9500FF"
                  android:layout_width="match_parent"
                  android:layout_height="2dp"/>

              <Button
                  android:id="@+id/patient_log"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_margin="10dp"
                  android:background="@drawable/btnedit_style"
                  android:drawableLeft="@drawable/btnpatn_back"
                  android:fontFamily="@font/modern_antiqua"
                  android:text="Patient"

                  android:textColor="#352403"
                  android:textSize="18dp"
                  android:textStyle="bold" />

              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="27dp"
                  android:text="OR"
                  android:fontFamily="@font/aclonica"
                  android:textColor="#161A1A"
                  android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                  android:textSize="25dp"
                  android:gravity="center_horizontal"
                  android:layout_gravity="center_horizontal"
                  android:textStyle="bold" />

              <Button
                  android:id="@+id/doctor_log"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_margin="10dp"
                  android:background="@drawable/btnedit_style"
                  android:drawableLeft="@drawable/btndoct_back"
                  android:fontFamily="@font/modern_antiqua"
                  android:text="Doctor"
                  android:textColor="#352403"
                  android:textSize="18dp"
                  android:textStyle="bold" />

          </LinearLayout>
      </androidx.cardview.widget.CardView>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                app:cardUseCompatPadding="true"
                android:layout_gravity="center"
                app:cardElevation="12dp"
                app:cardBackgroundColor="#23212424"
                app:cardCornerRadius="10dp"
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/aclonica"
                        android:textColor="#0A0111"
                        android:padding="12dp"
                        android:text=" New User :"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textSize="25dp"
                        android:textStyle="bold" />

                    <View
                        android:layout_marginTop="2dp"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_margin="2dp"
                        android:background="#00E5FF" />

                    <Button
                        android:id="@+id/sign_up"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:background="@drawable/btnedit_style"
                        android:drawableLeft="@drawable/btnsignup_back"
                        android:fontFamily="@font/modern_antiqua"
                        android:text="Sign up "
                        android:textAllCaps="false"
                        android:textColor="#352403"
                        android:textSize="18dp"
                        android:textStyle="bold" />


                </LinearLayout>


            </androidx.cardview.widget.CardView>


        </LinearLayout>

</LinearLayout>

  </RelativeLayout>
