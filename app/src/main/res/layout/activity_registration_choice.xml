<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistrationChoiceActivity"
    android:gravity="center"
    android:background="@drawable/doc_reg_img"
    android:orientation="vertical">
    <!--<ImageView-->
        <!--android:id="@+id/img"-->
        <!--android:layout_above="@+id/cardRegChoice"-->
        <!--android:transitionName="imageTransition"-->
        <!--android:src="@drawable/ic_pharmacy"-->
        <!--android:layout_width="100dp"-->
        <!--android:layout_centerInParent="true"-->
        <!--android:layout_height="100dp"-->
        <!--android:layout_margin="10dp"/>-->
    <androidx.cardview.widget.CardView
        app:cardUseCompatPadding="true"
        android:layout_gravity="center"
        app:cardElevation="12dp"
        android:id="@+id/cardRegChoice"
        app:cardBackgroundColor="#63849696"
        app:cardCornerRadius="10dp"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <TextView
        android:fontFamily="@font/aclonica"
        android:padding="12dp"
        android:textColor="#1A0444"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:text="Register As :"
        />
        <View
            android:layout_marginTop="2dp"
            android:background="#161618"
            android:layout_width="match_parent"
            android:layout_height="2dp"/>

        <Button
            android:backgroundTint="#E918B332"
            android:id="@+id/patient_registeration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/btnedit_style"
            android:drawableLeft="@drawable/btnpatn_back"
            android:fontFamily="@font/modern_antiqua"
            android:text="Patient"
            android:textColor="#1D3118"
            android:textSize="18dp"
            android:textStyle="bold" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="27dp"
            android:fontFamily="@font/aclonica"
            android:text="OR"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="#0D293E"
            android:textSize="25dp"
            android:layout_gravity="center_horizontal"
            android:textStyle="bold" />

        <Button
            android:backgroundTint="#6B1855B3"
            android:id="@+id/doctor_registeration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/btnedit_style"
            android:drawableLeft="@drawable/btndoct_back"
            android:fontFamily="@font/modern_antiqua"
            android:text="Doctor"
            android:textColor="#030B3C"
            android:textSize="18dp"
            android:textStyle="bold" />
    </LinearLayout>
        <LinearLayout
            android:layout_gravity="bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:gravity="center"
                android:layerType="hardware"
                android:layout_gravity="end"
            android:layout_marginLeft="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/autour_one"
                android:text="Already Registered ?"
                android:textColor="#0A2894"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/click_hereReg"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:fontFamily="@font/chewy"
                android:gravity="center"
                android:text=" click here"
                android:textColor="#FD715394"
                android:textSize="18dp"
                android:textStyle="bold" />

        </LinearLayout>
        <!--<View-->

            <!--android:layout_marginRight="95dp"-->
            <!--android:layout_gravity="bottom|end"-->
            <!--android:background="#0A55EB"-->
            <!--android:layout_width="80dp"-->
            <!--android:layout_height="2dp"/>-->


    </androidx.cardview.widget.CardView>
</RelativeLayout>