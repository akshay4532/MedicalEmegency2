<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/e">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <!--<ImageView-->
            <!--android:id="@+id/img"-->
            <!--android:layout_above="@+id/loginCard"-->
            <!--android:transitionName="imageTransition"-->
            <!--android:src="@drawable/ic_doctor_male"-->
            <!--android:layout_width="96dp"-->
            <!--android:layout_centerInParent="true"-->
            <!--android:layout_height="96dp"-->
            <!--android:layout_margin="10dp"/>-->

        <androidx.cardview.widget.CardView
            app:cardPreventCornerOverlap="true"
            app:cardBackgroundColor="#00000000"
            android:id="@+id/loginCard"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="5dp"
            app:cardElevation="5dp"
            android:layout_centerInParent="true"
            app:cardUseCompatPadding="true">
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:padding="10dp">
                    <!--<TextView-->
                        <!--android:layout_margin="20dp"-->
                        <!--android:textColor="@color/primaryDarkColor"-->
                        <!--android:textStyle="bold"-->
                        <!--android:textSize="24sp"-->
                        <!--android:layout_gravity="center"-->
                        <!--android:text="Doctor Profile"-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content" />-->
                    <TextView
                        android:textColor="#21CE9E"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:text="Personal Details *"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <View
                        android:background="#49BEB7"
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="2dp" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:textColorHint="#ffff"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <com.google.android.material.textfield.TextInputEditText
                            android:background="@drawable/edit_style"
                            android:inputType="textCapWords"
                            android:id="@+id/doc_fname"
                            android:hint="Enter Father's Name*"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        android:textColorHint="#ffff"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <com.google.android.material.textfield.TextInputEditText
                            android:background="@drawable/edit_style"
                            android:inputType="textCapWords"
                            android:id="@+id/doc_mom"
                            android:hint="Enter Mother's Name*"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <com.google.android.material.textfield.TextInputLayout
                                android:textColorHint="#ffff"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:background="@drawable/edit_style"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="Enter your DOB(DD/MM/YY)*"
                                    android:id="@+id/doc_dob"/>
                            </com.google.android.material.textfield.TextInputLayout>

                        </LinearLayout>


                        <Button
                            android:textSize="12dp"
                            android:id="@+id/doc_calenderbtn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:layout_marginTop="5dp"
                            android:backgroundTint="#31225734"
                            android:fontFamily="@font/autour_one"
                            android:text="Pick DOB "
                            android:textColor="#ffff" />
                    </LinearLayout>


                    <com.google.android.material.textfield.TextInputLayout
                        android:textColorHint="#ffff"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <com.google.android.material.textfield.TextInputEditText
                            android:background="@drawable/edit_style"
                            android:inputType="textCapWords"
                            android:id="@+id/doc_Nation"
                            android:hint="Enter Nationality*"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </com.google.android.material.textfield.TextInputLayout>



                    <com.google.android.material.textfield.TextInputLayout
                        android:textColorHint="#ffff"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <com.google.android.material.textfield.TextInputEditText
                            android:background="@drawable/edit_style"
                            android:inputType="textCapWords"
                            android:id="@+id/doc_langspoken"
                            android:hint="Language Spoken*"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </com.google.android.material.textfield.TextInputLayout>


                    <com.google.android.material.textfield.TextInputLayout
                        android:textColorHint="#ffff"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <com.google.android.material.textfield.TextInputEditText
                            android:background="@drawable/edit_style"
                            android:inputType="textCapWords"
                            android:id="@+id/doc_medHistory"
                            android:hint="Enter Past Medical History*  "
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:textColorHint="#ffff"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <com.google.android.material.textfield.TextInputEditText
                            android:background="@drawable/edit_style"
                            android:inputType="textCapWords"
                            android:id="@+id/doc_blood"
                            android:hint="Enter Blood Group*"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                        android:layout_marginTop="3dp"
                        android:textColor="#21CE9E"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:text="Professional Details *"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />


                    <View
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="#49BEB7"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <Spinner
                            android:background="@drawable/edit_style"
                            android:entries="@array/Category"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:id="@+id/specialist_doc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        </Spinner>

                        <com.google.android.material.textfield.TextInputLayout
                            android:textColorHint="#ffff"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <com.google.android.material.textfield.TextInputEditText
                                android:background="@drawable/edit_style"
                                android:inputType="textCapWords"
                                android:id="@+id/doc_qual"
                                android:hint="Enter your Qualification*"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:textColorHint="#ffff"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <com.google.android.material.textfield.TextInputEditText
                                android:background="@drawable/edit_style"
                                android:id="@+id/doc_reg"
                                android:hint="Enter your Registration Number*"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:textColorHint="#ffff"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <com.google.android.material.textfield.TextInputEditText
                                android:background="@drawable/edit_style"
                                android:inputType="textCapWords"
                                android:id="@+id/doc_insti"
                                android:hint="Enter your Institute Name*"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                        </com.google.android.material.textfield.TextInputLayout>


                        <com.google.android.material.textfield.TextInputLayout
                            android:textColorHint="#ffff"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <com.google.android.material.textfield.TextInputEditText
                                android:background="@drawable/edit_style"
                                android:id="@+id/doc_wrkingInsti"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Enter Present Working Institute Name*"
                                android:inputType="textCapWords" />
                        </com.google.android.material.textfield.TextInputLayout>

                    </LinearLayout>


                    <com.google.android.material.textfield.TextInputLayout
                        android:textColorHint="#ffff"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <com.google.android.material.textfield.TextInputEditText
                            android:background="@drawable/edit_style"
                            android:inputType="textCapWords"
                            android:id="@+id/doc_exp"
                            android:hint="Enter Year of Experience*"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        android:textColorHint="#ffff"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <com.google.android.material.textfield.TextInputEditText
                            android:background="@drawable/edit_style"
                            android:inputType="textCapWords"
                            android:id="@+id/doc_certificate"
                            android:hint="Enter Certification Title*"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                        android:textColor="#21CE9E"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:text="Address Details*"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <View
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="#49BEB7"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <com.google.android.material.textfield.TextInputLayout
                            android:textColorHint="#ffff"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <com.google.android.material.textfield.TextInputEditText
                                android:background="@drawable/edit_style"
                                android:inputType="textCapWords"
                                android:id="@+id/doc_flat"
                                android:hint="Flat No. And BLDG. Name*"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:textColorHint="#ffff"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <com.google.android.material.textfield.TextInputEditText
                                android:background="@drawable/edit_style"
                                android:inputType="textCapWords"
                                android:id="@+id/doc_road"
                                android:hint="Road No./Name*"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:textColorHint="#ffff"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <com.google.android.material.textfield.TextInputEditText
                                android:background="@drawable/edit_style"
                                android:inputType="textCapWords"
                                android:id="@+id/doc_Locality"
                                android:hint="Area / Locality*"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:textColorHint="#ffff"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <com.google.android.material.textfield.TextInputEditText
                                android:background="@drawable/edit_style"
                                android:inputType="textCapWords"
                                android:id="@+id/doc_city"
                                android:hint="Enter City*"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:textColorHint="#ffff"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <com.google.android.material.textfield.TextInputEditText
                                android:background="@drawable/edit_style"
                                android:inputType="textCapWords"
                                android:id="@+id/doc_state"
                                android:hint="Enter State*"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:textColorHint="#ffff"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <com.google.android.material.textfield.TextInputEditText
                                android:background="@drawable/edit_style"
                                android:inputType="textCapWords"
                                android:id="@+id/doc_country"
                                android:hint="Enter Country Name*"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:textColorHint="#ffff"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <com.google.android.material.textfield.TextInputEditText
                                android:background="@drawable/edit_style"
                                android:inputType="number"
                                android:id="@+id/doc_pin"
                                android:hint="Enter Pin Code*"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                        </com.google.android.material.textfield.TextInputLayout>

                    </LinearLayout>



                    <Button
                        android:fontFamily="@font/modern_antiqua"
                        android:elevation="23dp"
                        android:layout_margin="20dp"
                        android:background="@drawable/art_btn"
                        android:textColor="#fff"
                        android:id="@+id/docSubmit_btn"
                        android:text="Submit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>
            </ScrollView>
        </androidx.cardview.widget.CardView>
        <ProgressBar
            android:visibility="gone"
            android:id="@+id/progressbarDetaiDoctor"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</FrameLayout>